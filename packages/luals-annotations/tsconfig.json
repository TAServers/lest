{
  "include": ["src/__tests__/**/*.json", "src/**/*.ts"],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "composite": true,
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
