{
  "name": "@taservers/lest",
  "version": "1.1.0",
  "license": "MIT",
  "description": "Painless Lua testing inspired by Jest.",
  "main": "dist/index.js",
  "scripts": {
    "bundle": "luabundler bundle src/lua/lest.lua -p \"./?.lua\" -o dist/lest.lua",
    "minify": "lua scripts/minify.lua",
    "build": "npm run bundle && npm run minify",
    "test": "lua src/lua/lest.lua",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "luabundler": "^1.2.2",
    "luamin": "github:hsandt/luamin#develop",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0"
  }
}
