{
  "name": "@taservers/lest",
  "version": "1.1.0",
  "license": "MIT",
  "description": "Painless Lua testing inspired by Jest.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "bundle": "luabundler bundle src/lua/lest.lua -p \"./?.lua\" -o dist/lest.lua",
    "minify": "lua scripts/minify.lua",
    "build:lua": "npm run bundle && npm run minify",
    "build:typescript": "tsc",
    "build": "npm run build:lua && npm run build:typescript",
    "test:lua": "lua src/lua/lest.lua",
    "test:ts": "jest",
    "test": "npm run test:lua && npm run test:ts",
    "clean": "rimraf dist",
    "start": "ts-node src/index.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.3",
    "jest": "^29.5.0",
    "luabundler": "^1.2.2",
    "luamin": "github:hsandt/luamin#develop",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "lookpath": "^1.2.2",
    "minimist": "^1.2.8"
  }
}
