{
  "name": "@taservers/lest",
  "version": "2.1.0",
  "license": "MIT",
  "description": "Painless Lua testing.",
  "homepage": "https://taservers.github.io/lest/",
  "repository": {
    "type": "git",
    "url": "https://github.com/TAServers/lest",
    "directory": "packages/lest"
  },
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "lest": "./dist/bin/lest.js"
  },
  "scripts": {
    "build:lua": "luabundler bundle src/lua/lest.lua -p \"./?.lua\" -o dist/lua/lest.lua",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:lua && npm run build:ts",
    "test:lua": "lua src/lua/lest.lua",
    "test:ts": "jest",
    "test": "npm run test:lua && npm run test:ts",
    "clean": "rimraf dist",
    "start": "ts-node src/bin/lest.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/jest-when": "^3.5.2",
    "@types/node": "^20.3.3",
    "@types/minimist": "^1.2.5",
    "jest": "^29.5.0",
    "jest-when": "^3.5.2",
    "luabundler": "^1.2.2",
    "luamin": "github:hsandt/luamin#develop",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "lookpath": "^1.2.2",
    "minimist": "^1.2.8"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "lua",
    "test",
    "testing",
    "lest",
    "coverage",
    "runner",
    "painless",
    "mock",
    "mocking",
    "expect"
  ]
}
