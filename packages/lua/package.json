{
  "name": "@lest/lua",
  "description": "This package.json is just for scripts and tooling.",
  "scripts": {
    "bundle": "luabundler bundle src/lest.lua -p \"./?.lua\" -o dist/lest.lua",
    "minify": "lua scripts/minify.lua",
    "build": "npm run bundle && npm run minify",
    "test": "lua src/lest.lua",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "husky": "^8.0.3",
    "luabundler": "^1.2.2",
    "luamin": "github:hsandt/luamin#develop",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0"
  }
}
