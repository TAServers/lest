{
  "name": "@taservers/lest",
  "description": "Lua testing framework in the style of Jest.",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "format:site": "prettier --check packages/site",
    "build:lua": "npm run build --workspace=packages/lua",
    "build:site": "npm run build --workspace=packages/site",
    "test:lua": "npm run test --workspace=packages/lua"
  },
  "workspaces": [
    "packages/lua",
    "packages/docs",
    "packages/site",
    "packages/luals-annotations"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "husky": "^8.0.3",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0"
  }
}
